@page
@using FiyiStackWeb.Areas.BasicCulture.Models
@model FiyiStackWeb.Areas.BasicCulture.Pages.PageProvinceNonQueryModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int ProvinceId;
    string Name;
    string GeographicalCoordinates;
    string Code;
    int CountryId;
    

    if(HttpContext.Request.QueryString.Value.Contains("?ProvinceId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        ProvinceId = 0;
        Name = "";
        GeographicalCoordinates = "";
        Code = "";
        CountryId = 0;
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        ProvinceModel ProvinceModel = new ProvinceModel().Select1ByProvinceIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?ProvinceId=","")));

        ProvinceId = ProvinceModel.ProvinceId;
        Name = ProvinceModel.Name;
        GeographicalCoordinates = ProvinceModel.GeographicalCoordinates;
        Code = ProvinceModel.Code;
        CountryId = ProvinceModel.CountryId;
        
    }

    List<CountryModel> lstCountryModel = new CountryModel().SelectAllToList();

