@page
@using FiyiStackWeb.Areas.BasicCulture.Models
@model FiyiStackWeb.Areas.BasicCulture.Pages.PagePlanetNonQueryModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int PlanetId;
    string Name;
    string Code;
    

    if(HttpContext.Request.QueryString.Value.Contains("?PlanetId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        PlanetId = 0;
        Name = "";
        Code = "";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        PlanetModel PlanetModel = new PlanetModel().Select1ByPlanetIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?PlanetId=","")));

        PlanetId = PlanetModel.PlanetId;
        Name = PlanetModel.Name;
        Code = PlanetModel.Code;
        
    }

