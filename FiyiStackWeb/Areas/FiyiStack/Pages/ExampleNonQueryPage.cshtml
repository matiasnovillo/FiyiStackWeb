@page
@using FiyiStackWeb.Areas.FiyiStack.Models
@model FiyiStackWeb.Areas.FiyiStack.Pages.ExampleNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int ExampleId;
    bool Boolean;
    DateTime DateTime;
    decimal Decimal;
    int DropDown;
    int Options;
    int Integer;
    string TextBasic;
    string Email;
    string FileUpload;
    string HexColour;
    string Password;
    string PhoneNumber;
    string Tag;
    string TextArea;
    string TextEditor;
    string URL;
    TimeSpan Time;
    

    if(HttpContext.Request.QueryString.Value.Contains("?ExampleId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        ExampleId = 0;
        Boolean = false;
        DateTime = DateTime.Now;
        Decimal = 5M;
        DropDown = 0;
        Options = 0;
        Integer = 5;
        TextBasic = "";
        Email = "";
        FileUpload = "";
        HexColour = "#FFFFFF";
        Password = "";
        PhoneNumber = "";
        Tag = "";
        TextArea = "";
        TextEditor = "";
        URL = "http://";
        Time = TimeSpan.Parse("00:00");
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        ExampleModel ExampleModel = new ExampleModel().Select1ByExampleIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?ExampleId=","")));

        ExampleId = ExampleModel.ExampleId;
        Boolean = ExampleModel.Boolean;
        DateTime = ExampleModel.DateTime;
        Decimal = ExampleModel.Decimal;
        DropDown = ExampleModel.DropDown;
        Options = ExampleModel.Options;
        Integer = ExampleModel.Integer;
        TextBasic = ExampleModel.TextBasic;
        Email = ExampleModel.Email;
        FileUpload = ExampleModel.FileUpload;
        HexColour = ExampleModel.HexColour;
        Password = ExampleModel.Password;
        PhoneNumber = ExampleModel.PhoneNumber;
        Tag = ExampleModel.Tag;
        TextArea = ExampleModel.TextArea;
        TextEditor = ExampleModel.TextEditor;
        URL = ExampleModel.URL;
        Time = ExampleModel.Time;
        
    }

