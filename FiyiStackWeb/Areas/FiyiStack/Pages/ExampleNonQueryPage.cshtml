<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <!-- Header body -->
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <!-- Title -->
                    <h2 class="h2 text-white d-inline-block mb-0">
                        @NonQueryText 
                        example
                    </h2>
                    <input type="hidden" 
                        id="fiyistack-example-exampleid-input" 
                        value="@ExampleId"/>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item">
                                <a href="/CMSCore/DashboardIndex">
                                    <i class="fas fa-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">
                                    FiyiStack
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">
                                    Example
                                 </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <i class="@NonQueryIcon"></i>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <!-- XL Screens -->
                    <div class="d-none d-xl-inline">
                        <a href="/FiyiStack/ExampleQueryPage" class="btn btn-secondary">
                            <i class="fas fa-angle-left"></i> Go back
                        </a>
                    </div>
                    <!-- Other Screens -->
                    <div class="d-inline d-sm-inline d-md-inline d-lg-inline d-xl-none">
                        <a href="/FiyiStack/ExampleQueryPage" class="btn btn-secondary">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
<div class="row">
    <div class="col">
            <!-- Card -->
            <div class="card">
                <!-- Card body -->
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <!-- Boolean -->
                            <div class="form-group mb-3">
                                <label for="fiyistack-example-boolean-input" class="form-control-label">
                                    <i class="fas fa-toggle-on"></i> Boolean
                                </label>
                                <br/>
                                <input type="checkbox" 
                                    id="examples-example-boolean-input"
                                    @(Boolean == true ? "checked" : "" )
                                    required/>
                                <br />
                                <p class="text-danger text-sm">
                                    <b>This value is required.</b>
                                </p>
                            </div>
                        <!-- DateTime -->
                            <div class="form-group mb-3">
                                <label class="form-control-label">
                                    <i class="fas fa-calendar"></i> DateTime
                                </label>
                                <input id="examples-example-datetime-input" 
                                    value="@DateTime.ToString("yyyy'-'MM'-'dd'T'HH':'mm")" 
                                    type="datetime-local" 
                                    min="1753-01-01T00:00" 
                                    max="9998-12-30T23:59" 
                                    class="form-control"
                                    />
                                
                            </div>
                        <!-- Decimal -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-decimal-input" class="form-control-label">
                                <i class="fas fa-divide"></i> Decimal
                            </label>
                            <input class="form-control" 
                                type="number" 
                                id="fiyistack-example-decimal-input"
                                value="@(Convert.ToDouble(Decimal))" 
                                min="5" 
                                max="20" 
                                step=".01" 
                                pattern="^\d*(\.\d{0,2})?$" 
                                required>
                            <div class="invalid-feedback">
                                This value is required.
                            </div>
                        </div>
                        <!-- DropDown -->
                            <div class="form-group mb-3">
                                <label class="form-control-label">
                                    <i class="fas fa-hashtag"></i> DropDown
                                </label>
                                <br/>
                                <button type="button" 
                                    class="btn btn-outline-primary border-0" 
                                    data-toggle="modal" 
                                    data-target="#modal-foreign-key-code-selector">
                                        <i class="fas fa-hashtag"></i>
                                </button>
                                <ul id="fiyistack-example-dropdown-list"
                                    class="nav nav-pills nav-fill flex-column flex-sm-row" 
                                    role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link mb-sm-3 mb-md-0 active" 
                                            data-toggle="tab" 
                                            href="javascript:void(0)" 
                                            role="tab" 
                                            aria-controls="" 
                                            aria-selected="true">
                                                Choose a value
                                        </a>
                                        <input type="hidden" 
                                            id="fiyistack-example-dropdown-input"
                                            value="@DropDown"/>
                                    </li>
                                </ul>
                                <p class="text-danger text-sm">
                                    <b>This value is required.</b>
                                </p>
                            </div>
                        <!-- Options -->
                            <div class="form-group mb-3">
                                <label class="form-control-label">
                                    <i class="fas fa-hashtag"></i> 
                                    Options
                                </label>
                                <ul class="nav nav-pills nav-fill flex-column flex-sm-row" 
                                    role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link mb-sm-3 mb-md-0 fiyistack-example-options-a active" 
                                                data-toggle="tab" 
                                                href="javascript:void(0)" 
                                                role="tab" 
                                                aria-controls="" 
                                                aria-selected="true">
                                                    Choose a value
                                            </a>
                                            <input type="hidden" value="0"/>
                                        </li>
                                </ul>
                            </div>
                        <!-- Integer -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-integer-input" class="form-control-label">
                                <i class="fas fa-divide"></i> 
                                Integer
                            </label>
                            <input class="form-control" 
                                type="number" 
                                id="fiyistack-example-integer-input" 
                                value="@Integer" 
                                min="5" 
                                max="20" 
                                step="1" 
                                pattern="[^0-9]"
                                required/>
                            <div class="invalid-feedback">
                                This value is required.
                            </div>
                        </div>
                        <!-- TextBasic -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-textbasic-input" class="form-control-label">
                                <i class="fas fa-font"></i> TextBasic
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="100" 
                                type="text" 
                                id="fiyistack-example-textbasic-input" 
                                value="@TextBasic"
                                required/>
                            <div class="invalid-feedback">
                                    This value is required.
                                </div>
                        </div>
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-email-input" class="form-control-label">
                                <i class="fas fa-at"></i> Email
                            </label>
                            <input class="form-control" 
                                type="email" 
                                min="1" 
                                max="320" 
                                id="fiyistack-example-email-input" 
                                value="@Email" 
                                required/>
                            <div class="invalid-feedback">
                                This value is required.
                            </div>
                        </div>
                        <!-- FileUpload -->
                        <div class="form-group">
                            <label class="form-control-label">
                                <i class="fas fa-file"></i> FileUpload
                            </label>
                            <br/>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-preview img-thumbnail" 
                                    data-trigger="fileinput" 
                                    style="width: 200px; height: 150px;">
                                </div>
                                <div>
                                    <span class="btn btn-primary btn-file">
                                        <span class="fileinput-new">Select file</span>
                                        <span class="fileinput-exists">Change</span>
                                        <input type="file" 
                                            min="1" 
                                            max="8000" 
                                            id="fiyistack-example-fileupload-input" 
                                            value=""/>
                                    </span>
                                    <a href="#" class="btn btn-outline-danger fileinput-exists" data-dismiss="fileinput">
                                        Remove
                                    </a>
                                </div>
                            </div>
                            <input type="hidden" 
                                min="1" 
                                max="8000" 
                                id="fiyistack-example-fileupload-readonly" 
                                value="@FileUpload"/>
                            <br />
                            @if (@FileUpload == ""){
                                
                            }
                            else
                            {
                                <a class="btn btn-info btn-sm"
                                    href="@FileUpload"
                                    download>
                                        <i class="fas fa-download"></i>
                                        Download file
                                </a>
                            }
                        </div>
                        <!-- HexColour -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-hexcolour-input" 
                                class="form-control-label">
                                    <i class="fas fa-palette"></i> 
                                    HexColour
                            </label>
                            <input class="form-control" 
                                type="color"
                                min="000000"
                                max="FFFFFF"
                                value="@HexColour" 
                                id="fiyistack-example-hexcolour-input"
                                />
                            
                        </div>
                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-password-input" class="form-control-label">
                                <i class="fas fa-asterisk"></i> 
                                Password
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="8000" 
                                type="password" 
                                id="fiyistack-example-password-input" 
                                value="@Password" 
                                />
                            
                        </div>
                        <!-- PhoneNumber -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-phonenumber-input" class="form-control-label">
                                <i class="fas fa-phone"></i> 
                                PhoneNumber
                            </label>
                            <input class="form-control mt-2" 
                                min="1" 
                                max="500" 
                                type="tel" 
                                id="fiyistack-example-phonenumber-input" 
                                value="@PhoneNumber" 
                                />
                            
                        </div>
                        <!-- Tag -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-tag-input" class="form-control-label">
                                <i class="fas fa-tag"></i> Tag
                            </label>
                            <br/>
                            <input type="text" 
                                class="form-control" 
                                min="1" 
                                max="200" 
                                id="fiyistack-example-tag-input" 
                                value="@Tag" 
                                data-toggle="tags" 
                                />
                            
                        </div>
                        <!-- TextArea -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-textarea-input" class="form-control-label">
                                <i class="fas fa-font"></i> 
                                TextArea
                            </label>
                            <textarea class="form-control mt-1" 
                                id="fiyistack-example-textarea-input" 
                                rows="3" 
                                resize="none" 
                                maxlength="8000"
                                required>
                                    @TextArea
                            </textarea>
                            <div class="invalid-feedback">
                                This value is required.
                            </div>
                        </div>
                        <!-- TextEditor -->
                        <label for="fiyistack-example-texteditor-input" class="form-control-label">
                            <i class="fas fa-font"></i> 
                            TextEditor
                        </label>
                        <div id="fiyistack-example-texteditor-input">
                        </div>
                        <input type="hidden" 
                            value="@TextEditor" 
                            id="fiyistack-example-texteditor-hidden-value">
                        <div class="mb-3"></div>
                        <!-- URL -->
                        <div class="form-group mb-3">
                            <label for="fiyistack-example-url-input" class="form-control-label">
                                <i class="fas fa-globe"></i> 
                                URL
                            </label>
                            <input class="form-control" 
                                type="url" 
                                id="fiyistack-example-url-input" 
                                value="@URL" 
                                required>
                            
                        </div>
                        <!-- Time -->
                        <div class="form-group mb-3">
                            <label class="form-control-label">
                                <i class="fas fa-clock"></i> 
                                Time
                            </label>
                            <input class="form-control" 
                                type="time" 
                                min="00:00" 
                                max="23:59" 
                                value="@Time" 
                                id="fiyistack-example-time-input"
                                />
                            
                        </div>
                        
                        <!-- Buttons -->
                        <div class="row justify-content-between">
                            <button class="btn btn-primary text-nowrap ml-3 mt-4" 
                                type="submit">
                                    <i class="@NonQueryIcon"></i> 
                                    @NonQueryText
                            </button>
                            <a href="/FiyiStack/ExampleQueryPage" 
                                class="btn btn-outline-primary col-auto mr-3 mt-4 text-nowrap">
                                    <i class="fas fa-angle-left"></i> 
                                    Go back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-2">
            </div>
        </div>
    </div>
</div>

<!-- ForeignKeyDropDown selector in Modal style -->
<div class="row">
    <div class="col-md-4">
        <!-- Modal -->
        <div class="modal fade" id="modal-foreign-key-code-selector" tabindex="-1" role="dialog" aria-labelledby="modal-foreign-key-selector" aria-hidden="true">
            <div class="modal-dialog modal-secondary modal-dialog-centered modal-" role="document">
                <!-- Modal content -->
                <div class="modal-content bg-gradient-secondary">
                    <div class="modal-header">
                        <h6 class="modal-title text-primary">
                            Choose a ForeignKeyDropDown value <i class="fas fa-hashtag"></i>
                         </h6>
                    </div>
                    <div class="modal-body">
                        <form role="form">
                            <div class="form-group">
                                <div class="input-group input-group-merge input-group-alternative">
                                    <select id="fiyistack-example-foreignkeydropdown-select" class="form-control" data-toggle="select" title="Simple select" data-live-search="true" data-live-search-placeholder="Choose value" data-allow-reset="true">
                                        <option value="0"></option> <!--This must be empty-->
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-primary ml-auto" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Phone code Selector in Modal style -->
<div class="row">
    <div class="col-md-4">
        <div class="modal fade" id="modal-phone-code-selector" tabindex="-1" role="dialog" aria-labelledby="modal-phone-code-selector" aria-hidden="true">
            <div class="modal-dialog modal-secondary modal-dialog-centered modal-" role="document">
                <div class="modal-content bg-gradient-secondary">
                    <div class="modal-header">
                        <h6 class="modal-title text-primary">Choose your phone code <i class="fas fa-globe-americas"></i></h6>
                    </div>
                    <div class="modal-body">
                        <form role="form">
                            <div class="form-group">
                                <div class="input-group input-group-merge input-group-alternative">
                                    <select class="form-control" data-toggle="select" title="Simple select" data-live-search="true" data-live-search-placeholder="Country (+Code)" data-allow-reset="true">
                                        <option></option> <!--This must be empty-->
                                        <option>Argentina (+54)</option>
                                        <option>USA (+1)</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-primary ml-auto" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/BasicCore/jquery-3.6.1.min.js"></script>
<script src="/assets/vendor/quill/dist/quill.min.js"></script>
