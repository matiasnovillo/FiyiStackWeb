@page
@using FiyiStackWeb.Areas.CMSCore.Models
@model FiyiStackWeb.Areas.CMSCore.Pages.PageRoleNonQueryModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int RoleId;
    string Name;
    int UserCreationId;
    int UserLastModificationId;
    

    if(HttpContext.Request.QueryString.Value.Contains("?RoleId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        RoleId = 0;
        Name = "";
        UserCreationId = 0;
        UserLastModificationId = 0;
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        RoleModel RoleModel = new RoleModel().Select1ByRoleIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?RoleId=","")));

        RoleId = RoleModel.RoleId;
        Name = RoleModel.Name;
        UserCreationId = RoleModel.UserCreationId;
        UserLastModificationId = RoleModel.UserLastModificationId;
        
    }

