<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card bg-gradient-success">
                <div class="card-header bg-transparent">
                  <h1 class="mb-0 text-center">Welcome, @FantasyName!</h1>
                </div>
                <div class="card-body">
                    @Html.Raw(@Menues)
