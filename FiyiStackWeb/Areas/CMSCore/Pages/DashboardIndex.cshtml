@page
@using Microsoft.AspNetCore.Http;
@using FiyiStackWeb.Areas.CMSCore.Models;
@model FiyiStackWeb.Areas.CMSCore.Pages.DashboardIndexModel
@{
    Layout = "_LayoutDashboard";

    int UserId = HttpContext.Session.GetInt32("UserId") ?? 0;
    UserModel UserModel = new UserModel().Select1ByUserIdToModel(UserId);
    string FantasyName = UserModel.FantasyName;

    string Menues = new RoleMenuModel().SelectMenuesByRoleIdToStringForDashboardIndex(UserModel.RoleId); 
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card bg-gradient-success">
                <div class="card-header bg-transparent">
                  <h1 class="mb-0 text-center">Welcome, @FantasyName!</h1>
                </div>
                <div class="card-body">
                    @Html.Raw(@Menues)
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="card bg-default">
            <div class="card-header bg-transparent">
              <div class="row align-items-center">
                <div class="col">
                  <h6 class="text-light text-uppercase ls-1 mb-1">Overview</h6>
                  <h5 class="h3 text-white mb-0">Visitors per month</h5>
                </div>
                <div class="col">
                </div>
              </div>
            </div>
            <div class="card-body">
                <canvas id="myChart"></canvas>
            </div>
          </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
      datasets: [{
        label: 'Visitors per month',
        data: [12, 19, 3, 5, 39, 3],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>