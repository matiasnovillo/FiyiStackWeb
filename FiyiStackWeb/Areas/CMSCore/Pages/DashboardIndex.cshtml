        <div class="card">
            <div class="card-title">
                <h1 class="lead-3 ml-2 mt-2">Subscription details</h1>
            </div>
            <div class="card-body">
                <p class="lead-4"><strong>@AccountType</strong></p>
            </div>
        </div>
        @{
        if (UserModel.RoleId == 1)
            {
